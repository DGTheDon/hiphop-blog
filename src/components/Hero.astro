<section class="h-screen min-h-[600px] flex items-center justify-center bg-gradient-to-br from-deep-purple via-rich-black to-charcoal text-center relative overflow-hidden">
  <div id="hero-background" class="absolute inset-0 bg-rich-black/50"></div>
  <div class="relative z-10 container mx-auto px-4">
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading text-ghost-white uppercase tracking-wider mb-4">
      The Pulse of Hip Hop
    </h1>
    <p class="text-lg md:text-xl text-silver max-w-3xl mx-auto mb-8">
      Your definitive source for breaking news, exclusive interviews, and in-depth analysis of the culture.
    </p>
    <a href="#latest-articles" class="bg-electric-gold text-rich-black font-bold py-3 px-8 rounded-full text-lg uppercase hover:bg-white hover:text-rich-black transition-all duration-300 transform hover:scale-105">
      Explore Stories
    </a>
  </div>
</section>

<script>
  const heroBackground = document.getElementById('hero-background');

  window.addEventListener('scroll', () => {
    const scrollY = window.scrollY;
    if (heroBackground) {
      heroBackground.style.transform = `translateY(${scrollY * 0.5}px)`;
    }
  });
</script>