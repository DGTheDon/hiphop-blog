const trendingTopics = [
  { id: 1, title: "Kendrick Lamar's New Album Drops", category: "New Music" },
  { id: 2, title: "The Rise of Drill Music in the UK", category: "Features" },
  { id: 3, title: "Drake vs. The World: A History of Beefs", category: "Opinion" },
  { id: 4, title: "How TikTok is Changing the Music Industry", category: "Industry News" },
